<div class="mx-auto" style="width: 200px;">
    <% @perfume.each do|v| %>
        <center>
            <div class="card"">
                <img class="card-img-top" src="https://cdn.pixabay.com/photo/2017/02/12/21/29/false-2061131_1280.png" alt="IMAGE MISSING">
                <div class="card-body">
                    <h5 class="card-title"><%= v.name %></h5>
                    <a href="/add_to_cart/<%= v.id %>" class="btn btn-success btn-sm"><b>+</b></a>
                    <a href="/remove_from_cart/<%= v.id %>" class="btn btn-danger btn-sm"><b> -</b></a></br></br>
                    <a href="/perfume/delete/<%= v.id %>" class="btn btn-danger btn-sm"><b>Delete Product</b></a>
                </div>
            </div>
        </center>
    <% end %>
</div>

